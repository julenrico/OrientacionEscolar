<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/buttonEngineering"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_engineering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonScience" />

    <ImageButton
        android:id="@+id/buttonLaw"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/ic_laws"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHealth" />

    <ImageButton
        android:id="@+id/buttonHealth"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_health"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonScience"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_science"
        app:layout_constraintEnd_toStartOf="@+id/buttonHealth"
        app:layout_constraintStart_toEndOf="@+id/buttonArt"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonArt"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/ic_art"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>